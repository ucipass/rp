                ""
            ],
            "env": { 
                "PORT": "8081",
                "PREFIX": "rp",
                "LOG_LEVEL": "info",
                "rcvName":    "client1",
                "rcvPass":    "client1pass",
                "rcvPort":    "3127",
                "fwdName":    "client2",
                "fwdPass":    "client2pass",
                "fwdHost":    "localhost",
                "fwdPort":    "3128",
                "proxyport":  "3128",                
