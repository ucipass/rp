    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "server - mongodb",
            "args": [
                ""
            ],
            "env": { 
                "PORT": "8081",
                "PREFIX": "rp",
                "LOG_LEVEL": "info",
                "DATABASE_URL": "mongodb://localhost:27017/rp",
                "DATABASE_USERNAME": "admin",
                "DATABASE_PASSWORD": "admin",
