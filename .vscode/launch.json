    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run mocha",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": ["test/**/*.js", "--no-timeouts"],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "env": { "NODE_ENV": "testing",
                     "VUE_APP_PREFIX": "rpp",
                     "VUE_APP_SERVER_PORT": "3010"
                    },
            "outputCapture": "std"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "server",
            "args": [
                ""
            ],
            "env": {
                "NODE_ENV": "development",
                "VUE_APP_PREFIX": "rpp",
                "VUE_APP_SERVER_PORT": "3010"
            },            
            "program": "${workspaceFolder}/server.js",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "outputCapture": "std"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "client",
            "args": [
                "-w","http://localhost:3001/rp","-u","client1", "-p", "client1"
            ],
            "env": {
                "NODE_ENV": "development",
                "port":"3000", 
                "SERVER_URL": "http://localhost:3000/rp/", 
                "CLIENT_URL": "http://localhost:3000/rp/"
            },            
            "program": "${workspaceFolder}/sio-client.js",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "outputCapture": "std"
        }
    ]
}